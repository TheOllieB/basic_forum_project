<!DOCTYPE html>
<html>
  <head>
    <title>SoloProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col-md-4">
      <ul class="sidenav">
      <% if user_signed_in? %>
       <a> Logged in as <strong><%= current_user.username %></strong>.</a>
        <a><%= link_to 'Edit profile', edit_user_registration_path %></a>
        <a><%= link_to "Logout", destroy_user_session_path, method: :delete %></a>
      <% else %>
        <a><%= link_to "Sign up", new_user_registration_path %></a>
        <a><%= link_to "Login", new_user_session_path %></a>
      <% end %>
      </ul>
    </div>
    <div class="wrapper">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="row">
      <div class="col-md-8">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
