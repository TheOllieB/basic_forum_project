<div class="container">
	<h1><%= @post.title %></h1>
	<%= image_tag @post.image.url, width:'100%' %>
	<p><%= @post.content %></p>
	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to dlete this post" } %>
	<%= link_to "Home", root_path %>
</div>
